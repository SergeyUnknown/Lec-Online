@*
    For this part to be functional, you have to include
    @Html.Partial("_UploadDocumentationJavascript") in 
    your Scripts section.

    This block should be included outside of any form on the page.
*@
<div class="modal fade" id="uploadFilesModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">@Resources.SelectFilesToUpload</h4>
            </div>
            <div class="modal-body">
                <h5>
                    @Resources.PleaseSpecifyMeaningfulFleName
                </h5>
                @using (Html.BeginForm("UploadDocumentation", "Request", new { id = this.Model.Id }, FormMethod.Post, new { id = "dropzone", @class = "dropzone" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("fileType", 0)
                    <div class="fallback">
                        <input name="file" type="file" multiple="" />
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="upload-files">@Resources.Upload</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">@Resources.Close</button>
            </div>
        </div>
    </div>
</div>
